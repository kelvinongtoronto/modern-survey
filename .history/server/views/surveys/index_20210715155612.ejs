<% include ../partials/header.ejs %>

  <!-- MAIN CONTENT -->
  <div class="container">
    <div class="row">
      <div class="col-md-offset-1 col-md-10">
        <h3>Surveys List </h3>
        <a href="/surveys/add" class="btn btn-primary"><i class="fa fa-plus"></i> Add a survey</a>
        <br>
        <div class="table-responsive">
          <table class="table table-bordered table-striped table-hover">
            <thead>
              <!-- Header Row -->
              <tr>
                <th>Title</th>
                <th class="text-center">Owner</th>
                <th class="col-4">Questions</th>
                <th class="text-center">Active?</th>
                <th class="text-center">Lifespan</th>
                <th class="text-center"></th>
                <th class="text-center"></th>
                <th class="text-center"></th>
              </tr>
            </thead>

            <tbody>
              <!-- Template Row -->
              <% for (let count = 0; count < surveys.length; count++) { %>
                <tr>
                  <td><%= surveys[count].Title %></td>
                  <td class="text-center"><%= surveys[count].Owner %></td>
                  <td class="col-4"><%= surveys[count].Questions %></td>
                  <td class="text-center"><%= surveys[count].Active %></td>
                  <td class="text-center"><%= surveys[count].Lifespan %></td>

                  <td class="text-center">
                    <a href="/surveys/<%= surveys[count]._id %>" class="btn btn-primary btn-sm"> View</a>
                  </td>
                  <td class="text-center">
                    <a href="/surveys/edit/<%= surveys[count]._id %>" class="btn btn-primary btn-sm"> Edit</a>
                  </td>
                  <td class="text-center">
                    <a href="/surveys/delete/<%= surveys[count]._id %>" class="btn btn-danger btn-sm"> Delete</a>
                  </td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
        <div class="col-md-offset-1 col-md-10 text-center">
          <ul class="pagination pagination-lg pager" id="myPager"></ul>
        </div>
      </div>
    </div>
  </div>

<% include ../partials/footer.ejs %>


