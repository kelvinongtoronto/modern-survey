<% include ../partials/header.ejs %>

<div class="container">
    <div class="row">
        <div class="col-md-offset-1 col-md-10">
        <h3>Survey: <%= surveys.Title %> </h3>
        <form class="form" method="post">
            <% for (let count = 0; count < surveys.Questions.length; count++) { %>
                <div class="form-group">
                    <% if (surveys.Questions[count].includes(";")) { 
                        let answers = surveys.Questions[count].split(";"); %>
                        <b><%=answers[0]%></b>
                        <% for (let radio = 1; radio < answers.length; radio++) { %>
                            <div class="radio">
                                <label for="Question<%=count%>Radio<%=radio%>">
                                <input type="radio" id="Question<%=count%>Radio<%=radio%>"
                                    name="value<%=count%>" value="<%=answers[radio]%>">
                                <%=answers[radio]%></label>
                            </div>
                        <% } %>
                    <% } else { %>
                        <label for="TextField<%=count%>"><%=surveys.Questions[count]%></label>
                        <input type="text" class="form-control" id="TextField<%=count%>"
                        placeholder="Answer..." name="value<%=count%>" required>
                    <% } %>
                </div>
            <% } %>

            <button type="submit" class="btn btn-primary"><i class="fa fa-check-square-o"></i> Submit</button>
            <a href="/surveys" class="btn btn-warning"><i class="fa fa-undo"></i> Cancel</a>
        </form>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>